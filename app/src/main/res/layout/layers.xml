<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/layersTitle"
            android:id="@+id/textView9"
            android:layout_centerHorizontal="true"
            android:textColor="@color/titles"
            android:textSize="@dimen/title_text_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:layout_below="@+id/textView9"
            android:layout_centerHorizontal="true"
            android:src="@drawable/layers"
            android:contentDescription="@string/imageReference" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="@string/yourpathhint"
            android:id="@+id/tvlayerspath"
            android:textSize="25sp"
            android:layout_below="@+id/imageView3"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView10"
            android:src="@drawable/layers"
            android:layout_alignTop="@+id/buttonlayerschooser"
            android:layout_marginLeft="20dp"
            android:contentDescription="@string/imageReference" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="@string/layersbutton1txt"
            android:id="@+id/buttonlayerschooser"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/imageView10"
            android:layout_below="@+id/tvlayerspath"
            android:layout_margin="10dp"
            style="@style/Button" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView11"
            android:src="@drawable/ic_redflash"
            android:layout_alignTop="@+id/layersinstallbutton"
            android:layout_marginLeft="20dp"
            android:contentDescription="@string/imageReference" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="@string/layersbutton2txt"
            android:id="@+id/layersinstallbutton"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/imageView10"
            android:layout_toEndOf="@+id/imageView10"
            android:layout_below="@+id/buttonlayerschooser"
            android:layout_margin="10dp"
            style="@style/Button" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/imageView12"
            android:src="@drawable/ic_reload"
            android:layout_alignTop="@+id/rebootbutton"
            android:layout_marginLeft="20dp"
            android:contentDescription="@string/imageReference" />



        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="@string/layersbutton3txt"
            android:id="@+id/rebootbutton"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/imageView10"
            android:layout_toEndOf="@+id/imageView10"
            android:layout_below="@+id/layersinstallbutton"
            android:layout_margin="10dp"
            style="@style/Button" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deletelayersTitle"
            android:id="@+id/textView21"
            android:textColor="@color/titles"
            android:textSize="@dimen/title_text_size"
            android:layout_below="@+id/rebootbutton"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView13"
            android:src="@drawable/layers"
            android:layout_alignTop="@+id/deletelayerschooserbutton"
            android:layout_marginLeft="20dp"
            android:contentDescription="@string/imageReference" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="@string/layersbutton4txt"
            android:id="@+id/deletelayerschooserbutton"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/imageView10"
            android:layout_toEndOf="@+id/imageView10"
            android:layout_below="@+id/textView21"
            android:layout_margin="10dp"
            style="@style/Button" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/layersconfirmdel"
            android:id="@+id/deletecb"
            android:layout_below="@+id/deletelayerschooserbutton"
            android:layout_alignRight="@+id/deleteallbutton"
            android:layout_alignEnd="@+id/deleteallbutton"
            android:layout_alignLeft="@+id/deletebutton"
            android:layout_alignStart="@+id/deletebutton" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView14"
            android:src="@drawable/ic_trash"
            android:layout_alignTop="@+id/deletebutton"
            android:layout_marginLeft="20dp"
            android:contentDescription="@string/imageReference" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="@string/layersbutton5txt"
            android:id="@+id/deletebutton"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView10"
            android:layout_below="@+id/deletecb"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignRight="@+id/imageView3"
            android:layout_alignEnd="@+id/imageView3"
            style="@style/Button" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/layersbutton6txt"
            android:id="@+id/deleteallbutton"
            android:layout_marginLeft="10dp"
            android:layout_alignRight="@+id/deletelayerschooserbutton"
            android:layout_alignEnd="@+id/deletelayerschooserbutton"
            android:layout_alignTop="@+id/deletebutton"
            android:layout_alignBottom="@+id/deletebutton"
            android:layout_toRightOf="@+id/deletebutton"
            android:layout_toEndOf="@+id/deletebutton"
            style="@style/Button" />


    </RelativeLayout>

</ScrollView>
